@model WebNote.Models.Compromisso

@{
    ViewData["Title"] = "Deletar";
}


<div class="row">
    <div class="col-md-8 offset-md-2">
        <h2 class="jumbotron compromisso">Deletar compromisso</h2>
        <h3>Tem certeza de que deseja excluir este compromisso?</h3>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Titulo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Titulo)
                <hr />
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Descricao)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Descricao)
                <hr />
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Data)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Data)
                <hr />
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.HorarioInicio)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.HorarioInicio)
                <hr />
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.HorarioFim)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.HorarioFim)
                <hr />
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Deletar" class="btn btn-primary btns" /> |
            <a asp-action="Index" class="btn btn-success btns">Voltar</a>
        </form>
    </div>
</div>
