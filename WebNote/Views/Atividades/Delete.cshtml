@model WebNote.Models.Atividade

@{
    ViewData["Title"] = "Deletar";
}


<div class="row">
    <div class="col-md-8 offset-md-2">
        <h2 class="jumbotron atividade">Deletar atividade</h2>
        <h3>Tem certeza de que deseja excluir esta atividade?</h3>
        <br />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nome)
                <hr />
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Data)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Data)
                <hr />
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Horario)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Horario)
                <hr />
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Deletar" class="btn btn-primary btns" /> |
            <a asp-action="Index" class="btn btn-success btns">Voltar</a>
        </form>
    </div>
</div>
