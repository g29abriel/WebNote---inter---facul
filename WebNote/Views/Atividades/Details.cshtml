@model WebNote.Models.Atividade

@{
    ViewData["Title"] = "Detalhes";
}




<div class="row">
    <div class="col-md-6 offset-md-3">
        <h2 class="jumbotron atividade">Detalhes da atividade</h2>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nome)
                <hr />
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Data)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Data)
                <hr />
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Horario)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Horario)
                <hr />
            </dd>
        </dl>
        <div>
            <a class="btn btn-primary btns" asp-action="Edit" asp-route-id="@Model.Id">Editar</a> |
            <a asp-action="Index" class="btn btn-success btns">Voltar</a>
        </div>
    </div>
</div>

