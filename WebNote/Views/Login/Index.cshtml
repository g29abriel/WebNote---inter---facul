@model WebNote.Models.Login
@{
    ViewData["Title"] = "Usuários";
}
<h2 class="jumbotron">Login</h2>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Senha" class="control-label"></label>
                <input asp-for="Senha" class="form-control" type="password" required />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-default" />
                <a class="btn btn-default" asp-area="" asp-controller="Usuarios" asp-action="Create">Registrar</a>
            </div>
        </form>
    </div>
</div>