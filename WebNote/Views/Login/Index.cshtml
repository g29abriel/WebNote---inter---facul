@model WebNote.Models.Login
@{
    ViewData["Title"] = "Usuários";
}
@if (ViewData["erro"] != null) {
    @Html.Raw("<script>alert('" + ViewData["erro"] as string + "');</script>")

}

<div class="row">

    <div class="col-md-6 offset-md-3">
        <div>
            <h2 class="jumbotron" id="login">Login</h2>
        </div>
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <i class="fas fa-users fa-7x"></i>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Senha" class="control-label"></label>
                <input asp-for="Senha" class="form-control" type="password" required />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-dark btns" />
                <a class="btn btn-info btns" asp-area="" asp-controller="Usuarios" asp-action="Create">Registrar</a>
            </div>
        </form>
    </div>
</div>